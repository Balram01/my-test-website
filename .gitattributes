var readlinSync = require ("readline-sync");


function play(question, answer) {
  var userAnswer = readlinSync.question(question);

  if (userAnswer === answer) {
    console.log("You were right!");
   var score = score + 1;
  } else {
    console.log("You were wrong!");
    var score = score - 1;
  }
  
} 

